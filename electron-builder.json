{
  "appId": "com.ramcyclemart.app",
  "productName": "Ram Cycle Mart",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "electron/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraFiles": [
    {
      "from": "server",
      "to": "server",
      "filter": ["**/*"]
    },
    {
      "from": "shared",
      "to": "shared", 
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.ico"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "electron/assets/icon.icns"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Ram Cycle Mart"
  }
}