{
  "name": "ram-cycle-mart-desktop",
  "version": "1.0.0",
  "description": "Ram Cycle Mart - Desktop Application for Cycle Shop Management",
  "main": "main.js",
  "author": "Ram Cycle Mart",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "cd .. && npm run build",
    "build:renderer": "echo 'Renderer built with main app'",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.ramcyclemart.desktop",
    "productName": "Ram Cycle Mart",
    "copyright": "Copyright Â© 2025 Ram Cycle Mart",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "../dist/**/*",
      "../node_modules/**/*",
      "!../node_modules/@types/**/*",
      "!../node_modules/typescript/**/*",
      "!../node_modules/vite/**/*",
      "!../src/**/*",
      "!../.git/**/*"
    ],
    "extraResources": [
      {
        "from": "../package.json",
        "to": "package.json"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Ram Cycle Mart"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "RamCycleMart-Portable-${version}.exe"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "publish": null
  },
  "dependencies": {
    "electron": "^28.2.0",
    "better-sqlite3": "^9.4.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  }
}